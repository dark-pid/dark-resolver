server {
    listen 80;
    server_name _; # Use o nome de host desejado, se aplicável
        location = /favicon.ico {
    log_not_found off;
    access_log off;
}

    location / {
        root /usr/share/nginx/html;
        index index.html;
    }

    location /static/ {
        root /home/ubuntu/html/static;
    }

    location /resolver/ {
        rewrite ^/resolver(/.*)?$ $1 break;
        proxy_pass http://localhost:8000; # Endereço do seu container
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;

        # location ~* ^/api/static/(.*)$ {
        #     rewrite ^/api/static/(.*)$ /static/$1 break;
        # }
    }
}